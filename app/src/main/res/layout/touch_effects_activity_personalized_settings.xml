<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.PersonalizedSettingsActivity"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/single_none_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单独禁止"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_forbid="true"/>
        <TextView
            android:id="@+id/single_scale_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单独使用缩放"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="scale"/>
        <TextView
            android:id="@+id/single_ripple_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水波纹"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="ripple"/>
        <TextView
            android:id="@+id/single_ripple_round_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆角水波纹"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="ripple"
            app:touch_effects_radius="10dp"/>
        <TextView
            android:id="@+id/single_ripple_color_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色圆角水波纹"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="ripple"
            app:touch_effects_pressed_color="#803E7BAF"
            app:touch_effects_normal_color="#809D81FC"
            app:touch_effects_radius="10dp"/>
        <TextView
            android:id="@+id/single_ripple_1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水波纹1"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="ripple_1"/>
        <TextView
            android:id="@+id/single_ripple_round_1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆角水波纹1"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="ripple_1"
            app:touch_effects_radius="10dp"/>
        <TextView
            android:id="@+id/single_ripple_color_1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色圆角水波纹1"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="ripple_1"
            app:touch_effects_pressed_color="#803E7BAF"
            app:touch_effects_normal_color="#809D81FC"
            app:touch_effects_radius="10dp"/>
        <TextView
            android:id="@+id/single_state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="渐变"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="state"/>
        <TextView
            android:id="@+id/single_state_round_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆角渐变"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="state"
            app:touch_effects_radius="10dp"/>
        <TextView
            android:id="@+id/single_state_color_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色圆角渐变"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="state"
            app:touch_effects_pressed_color="#803E7BAF"
            app:touch_effects_normal_color="#809D81FC"
            app:touch_effects_radius="10dp"/>
        <TextView
            android:id="@+id/single_shake_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击抖动"
            android:padding="10dp"
            android:textColor="#FF000000"
            app:touch_effects_type="shake"/>
    </LinearLayout>

</ScrollView>